@model CelebrateMeProto.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Inventory & Orders";
}

<h1>Admin Dashboard</h1>

<div class="row mb-4">
    <div class="col-md-8">
        <h2>Inventory</h2>
        <p><a class="btn btn-primary" asp-action="Create">Create New</a></p>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Inventory</th>
                    <th>Points</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Products != null && Model.Products.Any())
            {
                foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>@item.Inventory</td>
                        <td>@item.Points</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No items found.</td></tr>
            }
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
        <h2>Orders (recent)</h2>
        <p>Total: @Model.TotalOrders | Pending: @Model.PendingOrders</p>

        <table class="table table-sm">
            <thead><tr><th>#</th><th>Customer</th><th>Points</th><th>Status</th><th></th></tr></thead>
            <tbody>
            @if (Model.RecentOrders != null && Model.RecentOrders.Any())
            {
                foreach (var o in Model.RecentOrders)
                {
                    <tr>
                        <td>@o.Id</td>
                        <td>@o.CustomerName</td>
                        <td>@o.PointsUsed</td>
                        <td>@o.Status</td>
                        <td>
                            <a asp-controller="AdminOrders" asp-action="Details" asp-route-id="@o.Id">View</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No orders yet.</td></tr>
            }
            </tbody>
        </table>

        <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-link">View all orders</a>
    </div>
</div>

@model IEnumerable<CelebrateMeProto.Models.Order>

<h1>Orders</h1>

<table class="table">
    <thead><tr><th>Id</th><th>Customer</th><th>PointsUsed</th><th>Status</th><th>Created</th><th></th></tr></thead>
    <tbody>
    @foreach(var o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.CustomerName</td>
            <td>@o.PointsUsed</td>
            <td>@o.Status</td>
            <td>@o.CreatedAt.ToLocalTime()</td>
            <td><a asp-action="Details" asp-controller="AdminOrders" asp-route-id="@o.Id">Details</a></td>
        </tr>
    }
    </tbody>
</table>